{
  "name": "landing-page-dark-mode",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "commit": "yarn git-cz",
    "autoprefixer": "postcss -u autoprefixer -r dist/css/*",
    "scss": "node-sass --output-style compressed -o dist/css src/scss",
    "uglify": "mkdirp dist/js -p && uglifyjs src/js/*.js --toplevel -m -c -o dist/js/main.min.js",
    "lint": "eslint src/js || true",
    "lint-scss": "stylelint src/scss/*.scss --syntax scss || true",
    "build:css": "run-s lint-scss scss autoprefixer",
    "build:js": "run-s lint uglify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thanhlam1998/landing-page-dark-mode.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/thanhlam1998/landing-page-dark-mode/issues"
  },
  "homepage": "https://github.com/thanhlam1998/landing-page-dark-mode#readme",
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "autoprefixer": "^9.8.6",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.0.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^7.0.2",
    "mkdirp": "^1.0.4",
    "node-sass": "^6.0.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.3.9",
    "postcss-cli": "^8.0.0",
    "rimraf": "^3.0.2",
    "stylelint": "^13.13.1",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "uglify-js": "^3.14.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
